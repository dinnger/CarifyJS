{
  "name": "clarifyjs",
  "version": "0.0.1",
  "description": " El framework de JavaScript para generar sitios de documentación increíblemente claros y fáciles de navegar. Simplifica la creación de guías, tutoriales y referencias técnicas, permitiendo que tu conocimiento brille con total nitidez.",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "npm run build:client && npm run build:server",
    "build:client": "vite build --outDir dist/client",
    "build:server": "vite build --ssr src/entry-server.js --outDir dist/server",
    "preview": "vite preview",
    "serve": "NODE_ENV=production node server.js",
    "serve:dev": "node server.js"
  },
  "author": "Raikenpor",
  "license": "ISC",
  "dependencies": {
    "@tailwindcss/vite": "^4.1.6",
    "@vitejs/plugin-vue-jsx": "^4.1.2",
    "compression": "^1.8.0",
    "express": "^5.1.0",
    "highlight.js": "^11.11.1",
    "markdown-it": "^14.1.0",
    "sirv": "^3.0.1",
    "vite": "^6.3.5",
    "vite-plugin-ssr": "^0.4.142",
    "vue": "^3.5.14",
    "vue-router": "^4.5.1"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^5.2.4",
    "autoprefixer": "^10.4.21",
    "tailwindcss": "^4.1.6"
  }
}
